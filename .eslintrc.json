{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "semi": "error",
    "no-console": 1,
    "quotes": ["error", "single"],
    "prefer-template": 1,
    "comma-dangle": ["error", "always-multiline"],
    "prefer-const": 1,
    "no-var": 1
  },
  "overrides": [
    {
      "files": ["pages/api/**/*", "./server.js"],
      "rules": {
        "no-console": 0
      }
    }
  ]
}
